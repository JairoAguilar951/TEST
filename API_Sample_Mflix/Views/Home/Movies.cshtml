@model IEnumerable<API_Sample_Mflix.Models.Movies>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<div class="d-flex flex-wrap align-items-center justify-content-between">

@foreach (var item in Model) {
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.poster)" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.title)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => item.plot)</p>
        <form action="@Url.Action("Movie","Home",new { edit = true })" method="post">
            <input type="hidden" name="title" value="@Html.DisplayFor(modelItem => item.title)" />
            <input type="hidden" name="plot" value="@Html.DisplayFor(modelItem => item.plot)" />
            <button class="btn btn-info " type="submit">Edit</button>
        </form>
    </div>
</div>
   
}
</div>


