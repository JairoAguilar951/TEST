@model IEnumerable<API_Sample_Mflix.Models.Movies>

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>


@foreach (var item in Model) {

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Html.DisplayFor(modelItem => item.poster)" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.title)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.fullplot)</p>
                    <p class="card-text"><small class="text-body-secondary">Rating: @Html.DisplayFor(modelItem => item.imdb.rating)</small></p>
                </div>
            </div>
        </div>
    </div>

}


